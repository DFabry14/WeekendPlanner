<body>
    <div class="jumbotron" id="homepage">
            <header>
                <!-- <div class="logo header-nav">
                <a href="#">
                    <img src="../public/assets/img/logo.png" class="planit-logo" alt="planit logo">
                </a>
            </div> -->
                <div class="login header-nav">
                    <img src="/assets/img/login-icon.png">
                    <a href="#" data-toggle="modal" data-target="#exampleModalCenter">Login</a>
                    <!--Login Modal-->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h6 class="modal-title" id="exampleModalLongTitle">Sign In</h6>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body">
                                    <form>
                                        <input id="txtEmail" type="email" placeholder="Email">
                                        <input id="txtPassword" type="password" placeholder="Password">
                                    </form>
                                </div>


                                <div class="modal-footer">
                                    <button id="btnLogin" class="btn btn-action">Log in</button>
                                    <button id="btnSignUp" class="btn btn-secondary">Sign up</button>
                                    <button id="btnLogout" class="btn btn-action hide">Log out</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <div class="container">

                <div class="home-div col-md-12">
                    <div class="logo-big">
                        <img src="/assets/img/logo.png">
                    </div>
                    <div class="slogan">
                        <h1>Plan your next weekend.</h1>
                        <h5>Discover new adventures anywhere in the world,
                            <br>in an organized fashion.</h5>
                    </div>
                    <div class="search-inputs">
                        <div class="captions row">
                            <div class="col-md-3"><a href="#" id="location-caption">Location</a></div>
                            <div class="col-md-6"><span class="error-input">Please Enter Something Here</span></div>
                        </div>
                        <form action="/action_page">
                            <div class="form-group row">
                                <div class="col-3">
                                    <input class="form-control input-lg city" id="city" autocomplete='address-level2' placeholder="Chicago, IL" type="text">
                                </div>
                                <div class="col-6">
                                    <input class="form-control input-lg event" id="event" placeholder="What do you want to do?" type="text">
                                </div>
                                <div class="col-3">
                                   <button type="button" class="btn btn-primary submit animsition-link" id="submit">Plan It!</button>
                                </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container" id="eventsPage">
            <div class="events">

                {{{ body }}}

