<div class="eventContainer">

    <br>
    <br>
    <h1 class="eventHead">Events in your area:</h1>

    <div class="col-md-12 eventOptions">
        <div class="col-md-4 eventList">
            <h3 class="friday days">Friday</h3>
            <ul style="list-style-type:none">
                {{!-- {{#each userEventFri}} {{#unless this.chosen}} --}}
                <li>
                    <div class="card">
                        <div class="card-header">
                            EVENT NAME
                        </div>
                        <div class="card-body">
                            <p class="card-text">Concert at The Metro</p>
                        </div>
                    </div>
                    <button data-id="{{this.id}}" class="btn btn-danger chosen">Let's go!</button>
                </li>
                {{!-- {{/unless}} {{/each}} --}}
            </ul>
        </div>
        <div class="col-md-4 eventList">
